<%- include('./layouts/header')%>

<main class="container-fluid pt-lg-4">
    <form action="/create" method="post" class="col-md-4">
        <div class="text-form">
            <label for="" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" required autocomplete="off">
        </div>
        <div class="text-form">
            <label for="" class="form-label">Both Date:</label>
            <input type="date" class="form-control" name="bothDate" required autocomplete="off">
        </div>
        <div class="text-form">
            <label for="" class="form-label">Email:</label>
            <input type="email" class="form-control" name="email" required autocomplete="off">
        </div>
        <div class="text-form">
            <label for="" class="form-label">Status:</label>
            <input type="text" class="form-control" name="status" required autocomplete="off">
        </div>
        <div class="buttons d-flex gap-2 mt-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/" class="btn btn-danger">Cancel</a>
        </div>
    </form>
</main>


<%- include('./layouts/footer')%>